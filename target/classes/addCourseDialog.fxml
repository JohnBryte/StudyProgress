<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.breit.curriculumrechner.AddCourseDialogController"
            prefHeight="400.0" prefWidth="600.0">
    <headerText>
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Module:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="moduleNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Course" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="courseNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
